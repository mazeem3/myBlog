<% if @blog.errors.any? %>
<div class="alert alert-danger" role="alert">
    <% @blog.errors.full_messages.each do |msg| %>
    <%= msg %><br>
    <% end %>
</div>
<% end %>

<div class="well">

    <%= form_for @blog do |f| %>
    <p>Title<p><%= f.text_area :title, cols: "30", rows: "1"%></p>
    </p>
    <p>Subtitle<p><%= f.text_area :subtitle, cols: "150", rows:"30" %></p>
    </p>
    <p>Author<p><%= f.text_area :author, cols: "15", rows:"1"%></p>
    </p>
    <p><%= f.submit class:"submit" %></p>

    <% end %>
</div>
